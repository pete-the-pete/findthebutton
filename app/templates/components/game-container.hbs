<div class="row">
  <div class="col-xs-12 col-sm-12 col-md-10">
    <div class="row">
      <div class="col-md-2">
        <div class="row">
          Level: {{concat level.levelDisplay " - " level.levelTitle}}
        </div>
        <div class="row timer">
          {{!-- play time --}}
          Time: {{playTime}}
        </div>
      </div>
      <div class="col-md-10">
        <div id="game-board">
          {{level-info
            levelTitle=level.levelTitle
            isPlaying=isPlaying
            isWinner=isWinner
            startPlaying=(action 'startPlaying')
            playAgain=(action 'playAgain')}}
          {{#component (concat 'levels/' level.levelFile)
            currentLevel=currentLevel
            isPlaying=isPlaying
            foundButton=(action "foundButton")}}
              <button {{action "foundButton"}} class="thebutton">TheButton</button>
          {{/component}}
        </div>
      </div>
    </div>
  </div>
  <div id="ads" class="col-md-2 hidden-md text-centered right-rail">{{!-- ads will go here --}}</div>
</div>